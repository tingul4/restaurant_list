<!-- ./views/layouts/main.handlebars -->
<!DOCTYPE html>
<html>

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>My restaurant list</title>
  <!-- link css files here -->
  <link rel="stylesheet" href="/stylesheets/bootstrap.css">
  <link rel="stylesheet" href="/stylesheets/fontawesome/css/all.min.css">
  <link rel="stylesheet" href="/stylesheets/index.css">
  <link rel="stylesheet" href="/stylesheets/show.css">
</head>

<body>
  <!-- navigation -->
  <nav class="navbar navbar-light bg-light">
    <div class="container">
      <a class="navbar-brand" href="/">
        <img src="https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/6227/restaurant-list-logo.png"
          width="30" height="30" class="d-inline-block align-top" alt="好。吃">
        {{#if isAuthenticated}} {{ user.name }} 的{{/if}}餐廳清單
      </a>
      {{#if isAuthenticated}}
        <a href="/users/logout" class="btn btn-outline-primary">Logout</a>
      {{else}}
        <a href="/users/login" class="btn btn-outline-primary">Login</a>
      {{/if}}
    </div>
  </nav>

  <div class="banner"></div>
  <!-- partial templates will replace the part of "body" here -->
  <div class="container mb-5">
    {{{ body }}}
  </div>
  <!-- include javascript files here -->
  <script src="/javascripts/popper.js"></script>
  <script src="/javascripts/bootstrap.js"></script>
</body>

</html>